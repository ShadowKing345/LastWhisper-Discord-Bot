{
  "name": "lastwhisper-discord-bot",
  "version": "3.0.1",
  "description": "The Discord Bot for the Free Company LastWhisper of the game Final Fantasy XIV.",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "dev": "nodemon --watch './src/**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main/app.ts",
    "command-setup": "node build/config/commandRegistration/registerCommands.js",
    "command-setup:ts": "node --experimental-specifier-resolution=node --loader ts-node/esm src/main/config/commandRegistration/registerCommands.ts",
    "build": "tsc --build --clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShadowKing345/LastWhisper-Discord-Bot.git"
  },
  "keywords": [
    "Discord Bot",
    "Discord",
    "Bot",
    "Typescript",
    "Final Fantasy XIV"
  ],
  "author": "Shadowking124",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/ShadowKing345/LastWhisper-Discord-Bot/issues"
  },
  "homepage": "https://github.com/ShadowKing345/LastWhisper-Discord-Bot#readme",
  "type": "module",
  "dependencies": {
    "@discordjs/builders": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "chalk": "^5.0.0",
    "dayjs": "^1.10.7",
    "discord-api-types": "^0.23.1",
    "discord.js": "^13.2.0",
    "mongodb": "^4.3.1",
    "uuid": "^8.3.2",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/node": "^17.0.10",
    "@types/uuid": "^8.3.4",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.4"
  }
}
