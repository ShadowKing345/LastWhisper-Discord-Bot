{
  "name": "lastwhisper-discord-bot",
  "version": "3.0.0",
  "description": "The Discord Bot for the Free Company LastWhisper of the game Final Fantasy XIV.",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node build/index.js",
    "register-commands": "node --experimental-specifier-resolution=node build/register-commands.js",
    "build": "tsc -b .",
    "dev": "nodemon src/index.ts --exec \"node --experimental-specifier-resolution=node --loader ts-node/esm\"",
    "dev-register-commands": "node --experimental-specifier-resolution=node --loader ts-node/esm src/register-commands.ts",
    "test": "TZ=UTC jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShadowKing345/LastWhisper-Discord-Bot.git"
  },
  "keywords": [
    "Discord Bot",
    "Discord",
    "Bot",
    "Typescript",
    "Final Fantasy XIV"
  ],
  "author": "Shadowking124",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/ShadowKing345/LastWhisper-Discord-Bot/issues"
  },
  "homepage": "https://github.com/ShadowKing345/LastWhisper-Discord-Bot#readme",
  "dependencies": {
    "@discordjs/builders": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "dayjs": "^1.10.7",
    "discord-api-types": "^0.23.1",
    "discord.js": "^13.2.0",
    "mongoose": "^6.0.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.9",
    "@types/jest": "^27.0.2",
    "@types/uuid": "^8.3.4",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jest": "^27.3.1",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.2.1",
    "typescript": "^4.5.4"
  }
}
