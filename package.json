{
  "name": "lastwhisper-discord-bot",
  "version": "3.0.1",
  "description": "The Discord Bot for the Free Company LastWhisper of the game Final Fantasy XIV.",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "command-setup": "node build/config/commandRegistration.js",
    "generate-config": "node build/config/generateAppConfigs.js",
    "dev": "nodemon --watch './src/**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/main/app.ts",
    "dev:command-setup": "node --experimental-specifier-resolution=node --loader ts-node/esm src/main/config/commandRegistration.ts",
    "dev:generate-config": "node --experimental-specifier-resolution=node --loader ts-node/esm src/main/config/generateAppConfigs.ts",
    "build:compile": "babel src/main --extensions .ts --out-dir build --source-maps",
    "build:types": "tsc",
    "build": "concurrently yarn:build:*",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "lint": "eslint . --ext .ts --max-warnings=0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShadowKing345/LastWhisper-Discord-Bot.git"
  },
  "keywords": [
    "Discord Bot",
    "Discord",
    "Bot",
    "Typescript",
    "Final Fantasy XIV"
  ],
  "author": "Shadowking124",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/ShadowKing345/LastWhisper-Discord-Bot/issues"
  },
  "homepage": "https://github.com/ShadowKing345/LastWhisper-Discord-Bot#readme",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@discordjs/builders": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "chalk": "^5.0.0",
    "dayjs": "^1.10.7",
    "discord-api-types": "^0.23.1",
    "discord.js": "^13.2.0",
    "inquirer": "^8.2.2",
    "mongodb": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.8",
    "@babel/preset-typescript": "^7.16.7",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/chalk": "^2.2.0",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-jest": "^27.5.1",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.5.1",
    "memfs": "^3.4.1",
    "merge": "^2.1.1",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.12",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4"
  }
}
