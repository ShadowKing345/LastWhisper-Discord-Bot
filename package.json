{
  "name": "lastwhisper-discord-bot",
  "version": "4.0.0",
  "description": "The Discord Bot for the Free Company LastWhisper of the game Final Fantasy XIV.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Shadowking124",
  "license": "GPL-3.0-only",
  "module": "dist/lastwhisper-discord-bot.esm.js",
  "size-limit": [
    {
      "path": "dist/lastwhisper-discord-bot.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/lastwhisper-discord-bot.esm.js",
      "limit": "10 KB"
    }
  ],
  "type": "module",
  "private": true,
  "dependencies": {
    "commander": "^9.2.0",
    "discord-api-types": "^0.37.15",
    "discord.js": "^14.6.0",
    "inquirer": "^8.2.2",
    "luxon": "^2.3.2",
    "mongodb": "^4.3.1",
    "pino": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/inquirer": "^8.2.1",
    "@types/luxon": "^2.3.1",
    "@types/pino": "^7.0.5",
    "@types/uuid": "^8.3.4",
    "husky": "^8.0.1",
    "pino-pretty": "^9.1.0",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4"
  }
}
