{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Last Whisper Discord Bot Configuration Schema",
  "description": "The application configuration json schema",
  "type": "object",
  "properties": {
    "token": {
      "type": "string"
    },
    "database": {
      "$ref": "databaseSchema.json"
    },
    "commandRegistration": {
      "$ref": "commandRegistrationSchema.json"
    },
    "logger": {
      "$ref": "loggerSchema.json"
    },
    "moduleConfiguration": {
      "$ref": "moduleConfigurationSchema.json"
    }
  },
  "required": ["token"]
}
