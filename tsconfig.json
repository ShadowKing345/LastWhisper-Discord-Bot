{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/main"
  ],
  "exclude": [
    "node_modules"
  ]
}