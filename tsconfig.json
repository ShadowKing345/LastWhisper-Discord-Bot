{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2017",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "removeComments": true,
    "incremental": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "*.config.js",
    ".idea/**/*"
  ]
}
