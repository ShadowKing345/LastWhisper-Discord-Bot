{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Output.
    "outDir": "build",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/main"
  ],
  "exclude": [
    "node_modules"
  ]
}