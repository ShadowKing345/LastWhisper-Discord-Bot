{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "outDir": "./build",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "./src/**/*.test.ts"
  ]
}
